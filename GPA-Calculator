#to save values determined in the while loop for later GPA calculation
classes = []
credit = []

#start an outside loop to have the entire input process repeat until the user indicates they are done
while True:

    #loop for the input of course grade that runs until a valid input value is entered
    while True:

        classGrade = input('Course Grade: ')
        #make user input uppercase so the following code will treat lower and uppercase inputs the same
        classGrade = classGrade.upper()

        #convert valid input letter grades into their numeric value
        if classGrade == str('A'):
            classGradeNumeric = 4
            break
            
        elif classGrade == str('B'):
            classGradeNumeric = 3
            break
            
        elif classGrade == str('C'):
            classGradeNumeric = 2
            break
            
        elif classGrade == str('D'):
            classGradeNumeric = 1
            break
            
        elif classGrade == str('F'):
            classGradeNumeric = 0
            break

        #if valid grade wasn't enter, print ERROR message and allow user to try again
        else:
            print('ERROR invalid value')

    #convert numeric class grade into a float number
    classGradeFloat = float(classGradeNumeric)

    #loop for the input of course credits that runs until a valid input value is entered
    while True:
        
        classCredit = input('Course Credits: ')

        #check if the string is a float number
        if  classCredit.replace('.','',1).isdigit() == True:
            #if it is, convert string to float number
            classCreditFloat = float(classCredit)
            break

        #if it isn't, print ERROR message and allow user to try again
        else:
            print('ERROR invalid value')


    classGpa = classGradeFloat * classCreditFloat

    #add numeric credits and grade into arrays at the start
    classes.append(classGpa)
    credit.append(classCreditFloat)

    #loop for the input of whether or not the user wants to continue that runs until a valid input value is entered
    while True:

        done = input('Are you finished? Please type Y/N: ')
        done = done.upper()

        if done == str('N'):
            break

        elif done == str('Y'):
            break

        else:
            print('ERROR invalid value')
            
    #if the input for done is y, it will break both the inner loop and the outer loop
    if done == str('Y'):
        break


#actual gpa calculation
totalClassGpa = sum(classes)
totalClassCredit = sum(credit)
totalGpa = round((totalClassGpa / totalClassCredit), 3)
print('Your GPA is ', totalGpa)
